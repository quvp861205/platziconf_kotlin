<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    app:cardCornerRadius="@dimen/cardCornerRadius"
    app:cardElevation="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <!-- POST -->
        <ImageView
            android:id="@+id/ivItemSpeakerImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/altoImageViewHome"
            android:baselineAligned="false"
            android:contentDescription="@string/todo"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            android:baselineAligned="false" />

        <TextView
            android:id="@+id/tvItemSpeakerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="nombre expositor"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/tamanioTitulo"
            android:gravity="center_horizontal"
            android:textStyle="bold"></TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/tvItemSpeakerWork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trabajo expositor"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/tamanioSubtitulo"></TextView>


    </LinearLayout>

</androidx.cardview.widget.CardView>