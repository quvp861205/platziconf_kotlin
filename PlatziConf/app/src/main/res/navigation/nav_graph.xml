<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navHomeFragment">

    <fragment
        android:id="@+id/navHomeFragment"
        android:name="com.example.platziconf.ui.fragments.Home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_scheduleFragment2"
            app:destination="@id/navScheduleFragment" />
    </fragment>
    <fragment
        android:id="@+id/navSpeakersFragment"
        android:name="com.example.platziconf.ui.fragments.Speakers.SpeakersFragment"
        android:label="fragment_speakers"
        tools:layout="@layout/fragment_speakers" >
        <action
            android:id="@+id/action_speakersFragment_to_ubicationFragment"
            app:destination="@id/navMapFragment" />
        <action
            android:id="@+id/action_navSpeakersFragment_to_speakerDetailFragmentoDialog"
            app:destination="@id/speakerDetailFragmentDialog" />
    </fragment>
    <fragment
        android:id="@+id/navMapFragment"
        android:name="com.example.platziconf.ui.fragments.Ubication.UbicationFragment"
        android:label="fragment_ubication"
        tools:layout="@layout/fragment_ubication" >
        <action
            android:id="@+id/action_navMapFragment_to_ubicationDetailFragmentDialog"
            app:destination="@id/ubicationDetailFragmentDialog" />
    </fragment>
    <fragment
        android:id="@+id/navScheduleFragment"
        android:name="com.example.platziconf.ui.fragments.Schedule.ScheduleFragment"
        android:label="fragment_schedule"
        tools:layout="@layout/fragment_schedule" >
        <action
            android:id="@+id/action_scheduleFragment2_to_speakersFragment"
            app:destination="@id/navSpeakersFragment" />
        <action
            android:id="@+id/action_navScheduleFragment_to_scheduleDetailFragmentDialog"
            app:destination="@id/scheduleDetailFragmentDialog" />
    </fragment>

    <dialog android:id="@+id/speakerDetailFragmentDialog"
        android:name="com.example.platziconf.ui.fragments.Speakers.SpeakersDetailDialogFragment"
        android:label="SpeakerDetailFragmentDialog"
        tools:layout="@layout/fragment_speakers_detail_dialog"></dialog>

    <dialog android:id="@+id/scheduleDetailFragmentDialog"
        android:name="com.example.platziconf.ui.fragments.Schedule.ScheduleDetailDialogFragment"
        tools:layout="@layout/fragment_schedule_detail_dialog"
        android:label="ScheduleDetailFragmentDialog"></dialog>

    <dialog android:id="@+id/ubicationDetailFragmentDialog"
        android:name="com.example.platziconf.ui.fragments.Ubication.UbicationDetailDialogFragment"
        android:label="UbicationDetailFragmentDialog"
        tools:layout="@layout/fragment_ubication_detail_dialog"></dialog>

</navigation>